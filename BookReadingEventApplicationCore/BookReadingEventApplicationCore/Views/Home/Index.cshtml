@model IEnumerable<DataAccessLayer.DatabaseModels.Event>

@{
    ViewBag.Title = "Index";
}


<table class="table">
    <tr>
        <th>
           PAST EVENTS
        </th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.Date < System.DateTime.Now)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.Title, "Details", new { id = item.EventID })
                </td>
            </tr>
        }
    }
 <br />
    <tr>
        <th>
            UPCOMING EVENTS
        </th>
    </tr>
    @foreach (var item in Model)
    {
        if (item.Date > System.DateTime.Now)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.Title, "Details", new { id = item.EventID })
                </td>
            </tr>
        }
    }


</table>